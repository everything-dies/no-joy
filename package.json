{
  "name": "nojoy",
  "version": "0.0.0",
  "description": "A Vite plugin framework that splits React components into concern-specific files",
  "type": "module",
  "packageManager": "pnpm@10.29.2",
  "license": "MIT",
  "author": "nojoy contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nojoy-dev/nojoy.git"
  },
  "bugs": {
    "url": "https://github.com/nojoy-dev/nojoy/issues"
  },
  "homepage": "https://github.com/nojoy-dev/nojoy#readme",
  "keywords": [
    "vite",
    "vite-plugin",
    "react",
    "framework",
    "filesystem",
    "compile-time"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./ts-plugin": {
      "require": "./ts-plugin/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "ts-plugin",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "postinstall": "node -e \"var fs=require('fs'),p='node_modules/nojoy';try{fs.lstatSync(p)}catch{fs.symlinkSync('..',p)}\"",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsx scripts/typecheck.ts",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test:run && npm run build",
    "release": "changeset publish",
    "version": "changeset version"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intl": "^7.0.0 || ^8.0.0",
    "vite": "^6.0.0 || ^7.0.0 || ^8.0.0-beta.0"
  },
  "dependencies": {
    "@babel/core": "^7.29.0",
    "@babel/generator": "^7.29.1",
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "@babel/types": "^7.29.0",
    "@everything-dies/flesh-cage": "^0.2.1",
    "@xstate/react": "^6.0.0",
    "chokidar": "^5.0.0",
    "debug": "^4.4.3",
    "fast-glob": "^3.3.3",
    "picomatch": "^4.0.3",
    "react-error-boundary": "^6.1.0",
    "react-intl": "^8.1.3",
    "xstate": "^5.26.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@changesets/cli": "^2.29.8",
    "@testing-library/react": "^16.3.2",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.2.3",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.6.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.13",
    "vitest": "^4.0.18"
  }
}
