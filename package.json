{
  "name": "nojoy",
  "version": "0.0.0",
  "description": "A Vite plugin framework that splits React components into concern-specific files",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "license": "MIT",
  "author": "nojoy contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nojoy-dev/nojoy.git"
  },
  "bugs": {
    "url": "https://github.com/nojoy-dev/nojoy/issues"
  },
  "homepage": "https://github.com/nojoy-dev/nojoy#readme",
  "keywords": [
    "vite",
    "vite-plugin",
    "react",
    "framework",
    "filesystem",
    "compile-time"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test:run && npm run build",
    "release": "changeset publish",
    "version": "changeset version"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.29.0",
    "@babel/generator": "^7.29.1",
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "@babel/types": "^7.29.0",
    "@xstate/react": "^6.0.0",
    "chokidar": "^4.0.3",
    "debug": "^4.4.3",
    "fast-glob": "^3.3.3",
    "picomatch": "^4.0.3",
    "xstate": "^5.26.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@changesets/cli": "^2.29.8",
    "@testing-library/react": "^16.3.2",
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.28.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.15.0",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^3.2.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.5.0",
    "prettier": "^3.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.1"
  }
}
